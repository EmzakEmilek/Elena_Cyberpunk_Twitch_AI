# STT Configuration
WHISPER_MODEL_SIZE=medium  # Options: base, medium, large-v2, large-v3
WHISPER_LANGUAGE=sk
WHISPER_USE_CUDA=true

# TTS Configuration
TTS_PROVIDER=azure  # Options: azure, elevenlabs, coqui
TTS_API_KEY=your_tts_api_key
TTS_REGION=westeurope
TTS_VOICE_NAME=sk-SK-LukasNeural

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, azure, anthropic
LLM_API_KEY=your_llm_api_key
LLM_MODEL_NAME=your_model_name

# Game State
CYBERPUNK_GAME_DIR=C:/Games/Cyberpunk2077
CET_WEBSOCKET_PORT=7777

# Redis Configuration (for state management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Overlay Server
OVERLAY_PORT=3000
OVERLAY_WEBSOCKET_PORT=3001

# OBS Configuration
OBS_WEBSOCKET_PORT=4455
OBS_WEBSOCKET_PASSWORD=your_password
